{% extends 'base.html.twig' %}

{% block title 'Nouvelle Dépense'%}

{% block body %}
    <div class="block-header">
        <div class="row clearfix">
            <div class="col-md-6 col-sm-12">
                <h2>Nouvelle Dépense</h2>
            </div>
        </div>
    </div>

    <div class="container-fluid">
        <div class="row clearfix">
            <div class="col-xl-9 col-lg-8 col-md-7">
                <div class="card">
                    <div class="header">
                        <h2>Remplissez le formulaire</h2>
                    </div>
                    <div class="body">
                        {{ form_start(form) }}
                            <div class="row clearfix">
                                <div class="col-lg-12 col-md-12">
                                    <div class="form-group">
                                        {{ form_row(form.libelle,{
                                            label : false,
                                            attr : {
                                                "class" : "form-control",
                                                "placeholder" : "Libellé"
                                            }
                                        }) }}
                                    </div>
                                </div>
                                <div class="col-lg-3 col-md-3">
                                    <div class="form-group">
                                        {{ form_row(form.amount, {
                                            label: false,
                                            attr:{
                                                "class":"form-control",
                                                "placeholder":"Montant"
                                            }
                                        }) }}
                                    </div>
                                </div>
                                <div class="col-lg-5 col-md-6">
                                    <div class="form-group">
                                        {{ form_row(form.submit_at, {
                                            label : false,
                                            attr : {
                                                "class":"form-control"
                                            }
                                        }) }}
                                    </div>
                                </div>
                            <br>
                        </div>
                        <button type="submit" class="btn btn-round btn-primary">Enregistrer</button>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
    <a class="btn btn-primary" href="{{ path('depense_index') }}">Retour à la liste</a>
{% endblock %}
